    );
    <!--控制显示-->
    for(set(i,0), i LT hotspot.count, inc(i),
    if(hotspot[get(i)].group === '%1', set(hotspot[get(i)].visible, true),set(hotspot[get(i)].visible, false));
    );
    <!--显示当前的选中菜单-->
